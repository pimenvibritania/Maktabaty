<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<div class="signup-form" style="color: white;">
			<h2 align="center">Edit Review</h2>
			<%= simple_form_for([@book, @review]) do |f| %>
			<div id="rating-form">
				<label>Rating</label>
			</div>
			<%= f.input :comment, :maxlength => 25, :placeholder=>'Max 25 char.. ' %>
			<%= f.button :submit, class: 'btn btn-custom2' %>
			<% end %>
		</div>
	</div>
</div>
<br>
<script>
	$('#rating-form').raty({

		path: '/assets/',
		scoreName: 'review[rating]'
	});

</script>