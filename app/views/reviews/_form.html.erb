
<%= simple_form_for([@book, @book.reviews.build]) do |f| %>

	<div id="rating-form">
		<label>Rating</label>
	</div>

	<%= f.input :comment, :maxlength => 25, :placeholder=>'Max 25 char.. ' %>
	<%= f.button :submit %>

<% end %>
<script>
	$('#rating-form').raty({

		path: '/assets/',
		scoreName: 'review[rating]'
	});

</script>