<% if user_signed_in? %>

	<h1 align="center" style="background-color: black; color: white;"><%= @thread.body %></h1>

	<%= render @thread.discussion %>

	<%= form_tag do %>
		<%= text_field_tag :nama, params[:nama], class: "form-control-plaintext", :readonly => true, value: current_user.email %>
		<%= text_field_tag :body, params[:body] %>
		<%= submit_tag 'toskol' %>
	<% end %>
<% else %>
<% redirect_to login_path %>
<% end %>