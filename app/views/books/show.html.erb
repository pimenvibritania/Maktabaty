<div class="container">
	<br>
	
	<div class="well well-sm glyphicon glyphicon-tags"> 	Posted by : <%= @user.email %></div>
	<h2 align="right"><%= @book.title %></h2>
	<h3 align="right"><%= @book.author %></h3>
	<h4 align="right">Category : <%= link_to @book.category.nama, books_path(category: @book.category.nama) %></h4>
	<p align="right"><%= @book.description %></p>
	<br>
	<h4 align="center"><%= @book.summary %></h4>
	<br>
	<h4 align="center"><%= @book.summaryeng %></h4>
	<br>
	<% if @book.document_file_name != nil %>
		<iframe src="<%= @book.document %>" width="100%" height="650px" frameBorder="0"></iframe>
	<% end %>
	<%= link_to "Back", root_path, class: 'btn btn-primary' %>
	
	
	
	<% if user_signed_in? %>

	

	<%  if @book.user_id == current_user.id %>

		<%= link_to "Edit", edit_book_path(@book) , class: 'btn btn-primary' %>
		<%= link_to "Delete", book_path(@book), class: 'btn btn-primary', method: :delete, data: { confirm: "Are you sure?"} %>
	<% end %>
	
	<% end %>

	<h2> <%= @book.comments.count %> Comments </h2>
	<%= render @book.comments %>

	<% if user_signed_in? %>

	<h3>Add a Comments : </h3>
	<%= render 'comments/form' %>
	<% end %>
</div>