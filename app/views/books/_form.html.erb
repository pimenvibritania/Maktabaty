

<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
	<%= select_tag(:category_id, options_for_select(@categories ), :prompt => "Select a category") %>
	<br><br>
	<p>Upload image here : <%= f.file_field :book_img %></p>
	<p>Upload PDF here : <%= f.file_field :document %></p>

	<%= f.input :title, label: "Book Title" %>
	<%= f.input :description %>
	<%= f.input :summary, label: "Arabic Summary" %>
	<%= f.input :summaryeng, label: "Summary" %>
	<%= f.input :author %>
	<%= f.button :submit %>


<% end %>