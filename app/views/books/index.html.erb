<style>
.containera {
  position: relative;

}

.image {
  display: block;
}

.overlay {
  position: absolute;
  bottom: 100%;
  left: 0;
  right: 0;
  background-color:rgba(132, 0, 44, 0.9);
  overflow: hidden;
  width: 100%;
  height:0;
  transition: .5s ease;
}

.containera:hover .overlay {
  bottom: 20px;
  height: 30%;
  box-shadow: 10px 10px 10px rgba(0,0,0,0.8);
}

.text {
  white-space: nowrap; 
  color: white;
  font-size: 1.6em;
  position: absolute;
  overflow: hidden;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
}

.bcor
{

  background-color: rgba(0,0,0,0.7);
  padding-bottom: 50px;
}

</style>
  
