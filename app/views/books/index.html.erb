 
<br>
<div class="container">

	<h1 class="current-category" align="center">- <%= params[:category] %> -</h1>

	<% if @books.count == 0 %>

		<h3 align="center">There are no books currently in this category</h3>
	
	<% else %>

		 <% @books.each do |book| %>
		  <h2 align="right"><%= link_to book.title, book_path(book) %></h2>
		 <% end %>
	<% end %>
	
</div>

