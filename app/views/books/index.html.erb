 
<br>
<div class="container">

	<h1 class="current-category" align="center">- <%= params[:category] %> -</h1>

	<% if @books.count == 0 %>

		<h3 align="center">There are no books currently in this category</h3>
	
	<% else %>

		 <% @books.each do |book| %>
		 	<a href="/books/<%=book.id %>">
		 		<%= image_tag book.book_img.url(:book_index) %>
		 	</a>
		 <% end %>
	<% end %>
	
</div>

